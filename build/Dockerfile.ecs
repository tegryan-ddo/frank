# Frank ECS Container
# Optimized for AWS ECS with Secrets Manager and EFS
FROM debian:bookworm-slim

LABEL maintainer="frank-cli"
LABEL description="Frank ECS container with Claude Code"

ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# Install base dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    wget \
    jq \
    unzip \
    ca-certificates \
    gnupg \
    sudo \
    build-essential \
    openssh-client \
    python3 \
    python3-pip \
    python3-venv \
    libffi-dev \
    libssl-dev \
    procps \
    less \
    vim \
    tmux \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20 LTS
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install -y gh \
    && rm -rf /var/lib/apt/lists/*

# Install AWS CLI v2
RUN ARCH=$(dpkg --print-architecture) && \
    if [ "$ARCH" = "amd64" ]; then \
        curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"; \
    elif [ "$ARCH" = "arm64" ]; then \
        curl "https://awscli.amazonaws.com/awscli-exe-linux-aarch64.zip" -o "awscliv2.zip"; \
    fi && \
    unzip awscliv2.zip && \
    ./aws/install && \
    rm -rf awscliv2.zip aws

# Install AWS Copilot CLI
RUN ARCH=$(dpkg --print-architecture) && \
    if [ "$ARCH" = "amd64" ]; then \
        curl -Lo /usr/local/bin/copilot https://github.com/aws/copilot-cli/releases/latest/download/copilot-linux; \
    elif [ "$ARCH" = "arm64" ]; then \
        curl -Lo /usr/local/bin/copilot https://github.com/aws/copilot-cli/releases/latest/download/copilot-linux-arm64; \
    fi && \
    chmod +x /usr/local/bin/copilot

# Install ttyd for web terminal
RUN ARCH=$(dpkg --print-architecture) && \
    TTYD_VERSION="1.7.7" && \
    if [ "$ARCH" = "amd64" ]; then \
        curl -L "https://github.com/tsl0922/ttyd/releases/download/${TTYD_VERSION}/ttyd.x86_64" -o /usr/local/bin/ttyd; \
    elif [ "$ARCH" = "arm64" ]; then \
        curl -L "https://github.com/tsl0922/ttyd/releases/download/${TTYD_VERSION}/ttyd.aarch64" -o /usr/local/bin/ttyd; \
    fi && \
    chmod +x /usr/local/bin/ttyd

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh \
    && mv /root/.local/bin/uv /usr/local/bin/ \
    && mv /root/.local/bin/uvx /usr/local/bin/ 2>/dev/null || true

# Install Claude Code CLI (native installer requires bash)
# The installer puts claude in ~/.local/bin/
RUN curl -fsSL https://claude.ai/install.sh | bash \
    && mv /root/.local/bin/claude /usr/local/bin/claude

# Create directories (running as root for volume mount compatibility)
RUN mkdir -p /root/.config/claude-code \
    && mkdir -p /root/.aws \
    && mkdir -p /root/.claude \
    && mkdir -p /workspace

# Bake MCP configuration into image
# Claude Code reads from ~/.claude.json for MCP servers
COPY build/.claude/mcp.json /root/.claude.json
COPY build/.claude/mcp.json /root/.claude/mcp.json

# Copy CLAUDE.md for environment documentation
COPY build/.claude/CLAUDE.md /root/.claude/CLAUDE.md

# Copy settings to use Opus 4.5 by default
# settings.json is the global config, settings.local.json is for project-level
COPY build/.claude/settings.local.json /root/.claude/settings.json
COPY build/.claude/settings.local.json /root/.claude/settings.local.json

# Copy web assets
COPY build/index.html /usr/local/share/frank/index.html
COPY build/status-server.py /usr/local/bin/status-server.py
RUN chmod +x /usr/local/bin/status-server.py

# Copy tmux config and session wrapper for persistent sessions
COPY build/.tmux.conf /root/.tmux.conf
RUN sed -i 's/\r$//' /root/.tmux.conf
COPY build/tmux-session.sh /usr/local/bin/tmux-session.sh
RUN chmod +x /usr/local/bin/tmux-session.sh

# Copy ECS-specific entrypoint
COPY build/entrypoint-ecs.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Copy prewarm script for pre-creating repos and worktrees
COPY build/prewarm.sh /usr/local/bin/prewarm.sh
RUN chmod +x /usr/local/bin/prewarm.sh

# Environment
ENV HOME=/root
ENV PATH="/root/.local/bin:${PATH}"
ENV WEB_PORT=7680
ENV TTYD_PORT=7681
ENV BASH_PORT=7682
ENV STATUS_PORT=7683
ENV AWS_REGION=us-east-1

WORKDIR /workspace

EXPOSE 7680 7681 7682 7683

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:${TTYD_PORT}/ || exit 1

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
